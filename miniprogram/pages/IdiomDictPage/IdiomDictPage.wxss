/* pages/IdiomDictPage/IdiomDictPage.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}

.center{
  width: 100%; 
  text-align: center;
  padding: 3%;
  display: flex;
  justify-content: center;
  align-content: center;
  align-items: center;
}
.topText{ color: #000; font-weight: bold; font-size: large;}



.bg-image
{ 
  width : 100%;
  height : 100%;  
  position: fixed;  
  z-index: -1;  
  /* border: 1px solid red; */
}
.phone-bar{
  /* display: block; */
  width: 100%;
  height: 40rpx;
  flex: none;
 background-color: #ebe7de;
}
/* 选项卡样式 */
.navbar{
  flex: none;
  display: flex;
  background: #fff;
}
.navbar .item{
  position: relative;
  flex: auto;
  text-align: center;
  line-height: 110rpx;
  font-size: 14pt;
  color: #b3b39f;
}
.navbar .item.active{
  color:#414141;
}
.navbar .item.active:after{
  content: "";
  display: block;
  position: absolute;
  bottom: 0;
  left: 0;
  right: 0;
  height: 4rpx;
  background: #CD5C5C;
}

/* Tab2:网络新词列表样式 */
.box
{
  width: 100%;
  /* height: 500px; */
  /* border: 1px solid red; */
}

.box-content{
  width: 100%;
  margin-top: 20rpx;
}

.card-item{
  display: flex;
  width: 94%;
  height: 100%;
  margin-left: 3%;
  margin-right: 3%;
  margin-bottom: 8rpx;
  position: relative;
  justify-content: center;
  align-items: center;
  border: 0.5rpx solid rgb(175, 175, 175);
  border-radius:0.5em;
  background-color:#ffffff;
}

.card-item-text
{
  margin-left: 3rpx;
  position: relative;
  width: 82%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* border: 1px solid blue; */
}

.card-item-text image {height: 100%; margin-left: 8px;}

.idiom-title{width: 100%;margin-bottom: 10px;display: flex;}
.idiom-title .title{height: 100%;margin-left: 3px;font-size: medium;font-weight:bold;}
/* 成语意思指定一行显示，超出用省略号 */
.idiom-content{
  width: 100%;
  font-size: small;
  overflow: hidden;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1}

.card-item-icon
{
  position: relative;
  width: 15%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border: 1px solid blue; */
}

.card-item-icon navigator{height: 100rpx;position: relative;}
.card-item-icon image {position: absolute;display: flex;height: 30%; justify-content: center;align-items: center;}

/* Tab1:传统成语列表样式 */
.subject
{
  display: flex;
  flex-wrap: wrap;
  margin-top: 20rpx;
  margin-bottom: 20rpx;
  margin-left: 3%;
  margin-right: 3%;
  width:94%;
  /* border: 1px solid black; */
  justify-content: space-around;
}
.subject-item{
  width: 310rpx;
  height: 250rpx;
  margin-bottom: 10rpx;
  position: relative;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  /* padding: 10rpx 5rpx; */
  /* box-sizing: border-box; */
  position: relative;
  border: 0.5rpx solid rgb(175, 175, 175);
  border-radius:0.8em;
  overflow: hidden;
}

.subject-item .img{
  width: 100%; height: 100%;
  /* border: 1px solid red; */
  background-color: black;
  box-sizing: border-box;
  overflow: hidden;
}

.image-text{

  width: 100%;
  height: 100%;
  /* background: rgba(0,0,0,0.3); */
  position: absolute;
  /* background-color: rgb(228, 226, 226); */
  top: 0;
  left: 0;
  color:white;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  font-size: x-large;
}
.total_btn{
  margin-left: 5%;
  width: 15%;
  height: 60%;
  color: #d78b81;
  display: flex;
  text-align: center;
  align-content: center;
  align-items: center;
  justify-content: center;
  font-size: 13pt;
  border-radius: 10rpx;
  background-color: #7C2D2A;
}
