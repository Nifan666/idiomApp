/* 搜索框 */
 /* pages/IdiomDictPage/IdiomDictPage.wxss */
page{
  display: flex;
  flex-direction: column;
  height: 100%;
}
.blank_box{
  width: 100%;
  height: 100%;
  position: relative;
}
.blank_image{
  height: 100%;
  width: 100%;
}
.search-box{
  width: 100%;
  position: relative;
  /* border: 2rpx solid red; */
  padding: 10rpx 20rpx;
  box-sizing: border-box;
  background-color: white;
}

 /* 标题 + 返回按钮 */
.back-line{
  width: 100%;
  height: 100rpx;
  /* border: 1px solid red; */
  display: flex;
  align-items: center;
  position: relative;
  align-content: center;
  justify-content: center;
  font-size: 13pt;
}
.phone-bar{ 
  background-color: #eee9e3;
}
.return{
  width: 50rpx;
  height: 50rpx;
  position: absolute;
  left: 10px;
}
.page_row{  
 display: flex;  
 flex-direction: row;
 padding: 1rpx 0;
 box-sizing: border-box;
 border: none;
 margin-left: 15rpx;
}  

.searchcion {  
 margin: 10rpx 10rpx 10rpx 10rpx;  
 /* border: 1px solid red; */
 position: absolute;  
 left:40rpx;  
 z-index: 2;  
 width: 20px;  
 height: 20px;  
 text-align: center;  
}  

.search{  
 width: 90%; background-color:#F5F5F5;
}  

.search_arr {  
 /* border: 1px solid #d0d0d0;   */
 border-radius: 30rpx;  
 margin-left: 20rpx;  
}  

.search_arr input{  
 margin-left: 80rpx;  
 height: 60rpx;  
 border-radius: 5px;  
}  

.bc_text {  
 line-height: 68rpx;  
 height: 68rpx;  
 margin-top: 34rpx;  
}  
 
.sousuo {  
 margin-left: 15rpx;  
 width: 15%;  
 line-height: 170%;  
 text-align: center;  
 /* border: 1px solid #d0d0d0;   */
 border-radius: 10rpx;  
}  

.sousuo .txt{
  color: rgb(50, 50, 50);
  font-size: 30rpx;
}
/* 类别 */
.box
{
  width: 100%;
  /* height: 500px; */
  /* border: 1px solid red; */
}

.box-content{
  width: 100%;
  margin-top: 20rpx;
}

.card-item{
  display: flex;
  width: 94%;
  height: 100%;
  margin-left: 3%;
  margin-right: 3%;
  margin-bottom: 8rpx;
  position: relative;
  justify-content: center;
  align-items: center;
  border: 0.5rpx solid rgb(175, 175, 175);
  border-radius:0.5em;
  background-color:#ffffff;
}

.card-item-text
{
  margin-left: 3rpx;
  position: relative;
  width: 82%;
  height: 150rpx;
  display: flex;
  flex-direction: column;
  justify-content: center;
  /* border: 1px solid blue; */
}

.card-item-text image {height: 100%; margin-left: 8px;}

.idiom-title{width: 100%;margin-bottom: 10px;display: flex;}
.idiom-title .title{height: 100%;margin-left: 3px;font-size: medium;font-weight:bold;}
/* 成语意思指定一行显示，超出用省略号 */
.idiom-content{
  width: 100%;
  font-size: small;
  overflow: hidden;
  display: -webkit-box;
  overflow: hidden;
  text-overflow: ellipsis;
  word-break: break-all;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 1}

.card-item-icon
{
  position: relative;
  width: 15%;
  height: 150rpx;
  display: flex;
  justify-content: center;
  align-items: center;
  /* border: 1px solid blue; */
}

.card-item-icon navigator{height: 100rpx;position: relative;}
.card-item-icon image {position: absolute;display: flex;height: 30%; justify-content: center;align-items: center;}
