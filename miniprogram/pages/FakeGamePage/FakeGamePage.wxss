/* // wxss文件
//整个页面竖向布局 */

.phone-bar{
  /* display: block; */
  height: 20px;
  background-color: #f5efdc;
}
.bg-image
{ 
  width : 100%;
  height : 100%;  
  position: fixed;  
  z-index: -1;  
  /* border: 1px solid red; */
}


.con{
  width : 100%;
  height : 100%;  
  position: fixed;  
  z-index: 0;  
}

/* 标题 + 返回按钮 */
.back-line{
  width: 100%;
  height: 100rpx;
  /* border: 1px solid red; */
  display: flex;
  align-items: center;
  position: relative;
  align-content: center;
  justify-content: center;
}

.return{
  width: 45rpx;
  height: 45rpx;
  position: absolute;
  left: 20px;
}

/* 题目 */
.ques_box{
  height: 40%;
  display: flex; 
  flex-direction: row;
}
/* 中间分割线 */
.vertical_line{
  width: 1%;
  height: 100%;
  border-right: 1rpx dashed #a7a8a8;
}

/* 题目 */
.item{
  padding-top: 10%;
  width: 49%;
  display: flex;
  justify-content: center;
  align-content: center;
}
.text_item{
  writing-mode: vertical-rl;
}
.text_item text{
  font-size: 20pt;
  color: #2d3034;
  letter-spacing:50rpx;
}


/* tip提示 */
.tips_line{
  margin: 5%;
  height: 10%; 
}
.tips_box{
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: center;
}

/* 按钮 */
.choose_box{
  height: 20%;
  display: flex;
  flex-direction: row;
}

.choose_btn{
  width: 100%;
  width: 50%;
  display: flex;
  justify-content: center;
}
.cs_btn_img{
  width: 200rpx;
  height: 200rpx;
}

 /* 底部 */
 .bottom{
   height: 20%;
 }
 

.interlayer{
  position: absolute;
  top: 0%;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

/* 居中显示是否正确 */
.interlayer image{
  width: 500rpx;
  height: 300rpx;
}